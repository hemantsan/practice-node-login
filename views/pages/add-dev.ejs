<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head'); %>

  <body class="container">
    <header><%- include('../partials/header'); %></header>

    <section class="section">
      <div class="container">
        <h1 class="title">Add New Developer</h1>
        <p class="subtitle">Enter developer details</p>
      </div>
      <div class="container mt-5">
        <div class="columns">
          <div class="column is-4">
            <% if (typeof locals.status !== 'undefined' && locals.status === 'success') { %>
              <div class="notification is-success">Developer Added</div>
            <% } %>

            <form action="/add-developer" method="post">
              <div class="field">
                <label class="label">Name</label>
                <div class="control">
                  <input class="input" name="name" type="text" />
                </div>
              </div>

              <div class="field">
                <label class="label">Location</label>
                <div class="control">
                  <input class="input" name="location" type="text" />
                </div>
              </div>

              <div class="field">
                <label class="label">Skill</label>
                <div class="control">
                  <input class="input" name="skill" type="text" />
                </div>
              </div>

              <div class="field">
                <label class="label">Experience</label>
                <div class="control">
                  <input class="input" name="experience" type="text" />
                </div>
              </div>

              <div class="field is-grouped">
                <div class="control">
                  <button class="button is-link">Submit</button>
                </div>
                <div class="control">
                  <a href="/" class="button is-text">Cancel</a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
